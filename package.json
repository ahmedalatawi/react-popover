{
  "name": "@atawi/react-popover",
  "version": "1.0.8",
  "description": "A fully-featured, accessible, and customizable popover component for React applications",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc --project tsconfig.lib.json && vite build --config vite.lib.config.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build:lib",
    "docs:dev": "vite",
    "docs:build": "vite build",
    "docs:preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.5",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jsdom": "^24.0.0",
    "lucide-react": "^0.460.0",
    "react-syntax-highlighter": "^15.6.1",
    "sass": "^1.81.0",
    "terser": "^5.36.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.18.2",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^2.1.5",
    "vitest": "^2.1.5"
  },
  "keywords": [
    "react",
    "popover",
    "tooltip",
    "dropdown",
    "menu",
    "overlay",
    "accessible",
    "aria",
    "typescript"
  ],
  "author": "Atawi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmedalatawi/react-popover.git"
  },
  "bugs": {
    "url": "https://github.com/ahmedalatawi/react-popover/issues"
  },
  "homepage": "https://github.com/ahmedalatawi/react-popover#readme",
  "publishConfig": {
    "access": "public"
  }
}
